<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.healzone.MainViewController">

    <!-- Background image -->
    <ImageView fitHeight="810.0" fitWidth="1550.0" preserveRatio="false">
        <image>
            <Image url="@Images/login.jpg" />
        </image>
    </ImageView>

    <!-- Foreground layout -->
    <BorderPane prefHeight="800.0" prefWidth="1550.0">
      <top>
         <ToolBar styleClass="welcomeBar" stylesheets="@MainView.css" BorderPane.alignment="CENTER">
            <items>
               <HBox prefHeight="100.0" prefWidth="1354.0">
                  <children>
                     <AnchorPane prefHeight="100.0" prefWidth="516.0">
                        <children>
                           <Label layoutX="107.0" layoutY="14.0" prefHeight="51.0" prefWidth="173.0" text="Healzone" textFill="WHITE">
                              <font>
                                 <Font name="SansSerif Bold" size="35.0" />
                              </font>
                           </Label>
                           <FontIcon iconColor="WHITE" iconLiteral="fas-briefcase-medical" iconSize="80" layoutX="14.0" layoutY="80.0" selectionEnd="0" selectionStart="0" wrappingWidth="50.0" />
                           <Label layoutX="107.0" layoutY="66.0" text="Book with confidence, Heal with care!" textFill="#a4a2a2">
                              <font>
                                 <Font size="17.0" />
                              </font>
                           </Label>
                        </children>
                     </AnchorPane>
                     <AnchorPane prefHeight="100.0" prefWidth="537.0">
                        <children>
                           <ToggleButton fx:id="doctorLoginToggle" layoutX="332.0" layoutY="28.0" onAction="#loadDoctorLogin" prefHeight="42.0" prefWidth="130.0" selected="true" styleClass="button" stylesheets="@HomePage.css" text="Login As Doctor">
                           </ToggleButton>
                           <ToggleButton fx:id="patientLoginToggle" layoutX="39.0" layoutY="29.0" onAction="#loadPatientLogin" prefHeight="42.0" prefWidth="130.0" styleClass="button" stylesheets="@HomePage.css" text="Login As Patient">
                              <toggleGroup>
                                      <ToggleGroup fx:id="loginToggleGroup" />
                              </toggleGroup>
                           </ToggleButton>
                        </children>
                     </AnchorPane>
                  </children>
               </HBox>
            </items>
         </ToolBar>
      </top>
      <center>
            <StackPane fx:id="contentPane" prefHeight="677.0" prefWidth="1550.0" BorderPane.alignment="CENTER" />
      </center>

    </BorderPane>
</StackPane>
