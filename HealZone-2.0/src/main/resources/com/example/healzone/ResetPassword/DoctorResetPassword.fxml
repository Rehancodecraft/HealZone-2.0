<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.healzone.ResetPassword.DoctorResetPasswordController">
   <children>
      <ImageView fitHeight="800.0" fitWidth="1550.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../Images/login.jpg" />
         </image>
      </ImageView>
      <FontIcon iconColor="WHITE" iconLiteral="fas-lock" iconSize="100" layoutX="605.0" layoutY="158.0" />
      <FontIcon iconColor="#1a26d4" iconLiteral="fas-question" iconSize="40" layoutX="634.0" layoutY="156.0" />
      <PasswordField fx:id="password" layoutX="456.0" layoutY="281.0" prefHeight="59.0" prefWidth="368.0" promptText="Enter Your Password" styleClass="logintexfield" stylesheets="@../Design/Login.css" />
      <PasswordField fx:id="confirmPassword" layoutX="456.0" layoutY="387.0" prefHeight="59.0" prefWidth="368.0" promptText="Enter Your Password" styleClass="logintexfield" stylesheets="@../Design/Login.css" />
      <Button fx:id="passwordResetButton" layoutX="456.0" layoutY="499.0" mnemonicParsing="false" onAction="#onClickResetPasswordButton" prefHeight="60.0" prefWidth="368.0" styleClass="loginbutton" stylesheets="@../Design/Login.css" text="Reset" textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Button>
      <Label layoutX="539.0" layoutY="171.0" text="Reset Password" textFill="WHITE">
         <font>
            <Font name="SansSerif Bold" size="28.0" />
         </font>
      </Label>
      <Label layoutX="456.0" layoutY="253.0" text="New Password" textFill="WHITE">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Label layoutX="456.0" layoutY="359.0" text="Confirm New Password" textFill="WHITE">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="456.0" layoutY="468.0" prefHeight="18.0" prefWidth="368.0">
         <children>
            <Label fx:id="resetPasswordErrorMessage" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</AnchorPane>
