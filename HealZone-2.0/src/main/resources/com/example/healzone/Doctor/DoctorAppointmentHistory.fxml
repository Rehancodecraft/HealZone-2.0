<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="TOP_CENTER" prefHeight="520.0" prefWidth="1200.0" spacing="12" styleClass="history-container" stylesheets="@../Design/DoctorAppointmentHistory.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.healzone.Doctor.DoctorAppointmentHistoryController">

    <!-- Header Section -->
    <VBox spacing="6" styleClass="history-header">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <FontIcon iconColor="WHITE" iconLiteral="fas-history" iconSize="18" />
            <Label prefHeight="25.0" prefWidth="280.0" styleClass="history-title" text="Appointment History">
                <font>
                    <Font name="SansSerif Bold" size="18.0" />
                </font>
            </Label>
            <Region prefHeight="30.0" prefWidth="100.0" />
            <HBox fx:id="historyStats" alignment="CENTER_LEFT" spacing="12" styleClass="history-stats">
                <!-- Stats will be populated dynamically -->
            </HBox>
            <Region prefHeight="30.0" prefWidth="300.0" />
            <Button fx:id="refreshButton" onAction="#refreshHistory" prefHeight="28.0" prefWidth="100.0" styleClass="refresh-button" text="Refresh">
                <graphic>
                    <FontIcon iconColor="WHITE" iconLiteral="fas-sync-alt" iconSize="11" />
                </graphic>
                <font>
                    <Font name="SansSerif Bold" size="11.0" />
                </font>
            </Button>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label styleClass="history-subtitle" text="View and manage your completed appointments">
                <font>
                    <Font name="SansSerif" size="12.0" />
                </font>
            </Label>
        </HBox>
    </VBox>

    <!-- Search and Filter Section -->
    <VBox spacing="8">
        <!-- Search Bar -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="patientSearchBar" prefHeight="40.0" prefWidth="300.0" promptText="Search Patient by Name or Phone" styleClass="search-bar">
                <font>
                    <Font name="System Bold Italic" size="14.0" />
                </font>
            </TextField>
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchPatient" prefHeight="40.0" styleClass="action-button" text="Search">
                <graphic>
                    <FontIcon iconColor="WHITE" iconLiteral="fas-search" iconSize="16" />
                </graphic>
            </Button>
            <Button fx:id="clearSearchButton" mnemonicParsing="false" onAction="#clearSearch" prefHeight="40.0" styleClass="clear-button" text="Clear">
                <graphic>
                    <FontIcon iconColor="WHITE" iconLiteral="fas-times" iconSize="14" />
                </graphic>
            </Button>
        </HBox>

        <!-- Filter and Sort Section -->
        <HBox alignment="CENTER" spacing="15">
            <Label styleClass="filter-label" text="From:">
                <font>
                    <Font name="SansSerif Bold" size="12.0" />
                </font>
            </Label>
            <DatePicker fx:id="fromDatePicker" prefHeight="35.0" prefWidth="150.0" styleClass="date-picker" />

            <Label styleClass="filter-label" text="To:">
                <font>
                    <Font name="SansSerif Bold" size="12.0" />
                </font>
            </Label>
            <DatePicker fx:id="toDatePicker" prefHeight="35.0" prefWidth="150.0" styleClass="date-picker" />

            <Label styleClass="filter-label" text="Status:">
                <font>
                    <Font name="SansSerif Bold" size="12.0" />
                </font>
            </Label>
            <ComboBox fx:id="statusFilter" prefHeight="35.0" prefWidth="120.0" styleClass="combo-box" />

            <Label styleClass="filter-label" text="Sort by:">
                <font>
                    <Font name="SansSerif Bold" size="12.0" />
                </font>
            </Label>
            <ComboBox fx:id="sortComboBox" prefHeight="35.0" prefWidth="150.0" styleClass="combo-box" />

            <Button fx:id="applyFiltersButton" mnemonicParsing="false" onAction="#applyFilters" prefHeight="35.0" styleClass="filter-button" text="Apply">
                <graphic>
                    <FontIcon iconColor="WHITE" iconLiteral="fas-filter" iconSize="14" />
                </graphic>
            </Button>

            <Button fx:id="resetFiltersButton" mnemonicParsing="false" onAction="#resetFilters" prefHeight="35.0" styleClass="reset-button" text="Reset">
                <graphic>
                    <FontIcon iconColor="WHITE" iconLiteral="fas-undo" iconSize="14" />
                </graphic>
            </Button>
        </HBox>
    </VBox>

    <!-- Table Container -->
    <VBox prefHeight="350.0" prefWidth="1150.0" spacing="4" VBox.vgrow="ALWAYS">
        <!-- Table ScrollPane -->
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" minHeight="310.0" prefHeight="350.0" prefWidth="1150.0" styleClass="table-scroll-pane" VBox.vgrow="ALWAYS">
            <TableView fx:id="historyTable" prefHeight="310.0" prefWidth="1146.0" styleClass="history-table">
                <columns>
                    <TableColumn fx:id="appointmentNumberColumn" prefWidth="100.0" styleClass="appointment-number-column" text="Appointment #" />
                    <TableColumn fx:id="patientNameColumn" prefWidth="180.0" styleClass="patient-name-column" text="Patient Name" />
                    <TableColumn fx:id="phoneColumn" prefWidth="130.0" styleClass="phone-column" text="Phone Number" />
                    <TableColumn fx:id="dateColumn" prefWidth="160.0" styleClass="date-column" text="Date and Time" />
                    <TableColumn fx:id="statusColumn" prefWidth="100.0" styleClass="status-column" text="Status" />
                    <TableColumn fx:id="diagnosisColumn" prefWidth="200.0" styleClass="diagnosis-column" text="Diagnosis" />
                    <TableColumn fx:id="actionColumn" prefWidth="146.0" styleClass="action-column" text="Actions" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </ScrollPane>

        <!-- No History Label -->
        <Label fx:id="noHistoryLabel" alignment="CENTER" maxWidth="Infinity" styleClass="no-history-label" text="No appointment history found" visible="false" wrapText="true">
            <graphic>
                <FontIcon iconColor="rgba(255, 255, 255, 0.5)" iconLiteral="fas-calendar-times" iconSize="24" />
            </graphic>
            <font>
                <Font name="SansSerif" size="14.0" />
            </font>
        </Label>
    </VBox>

    <!-- Padding for the entire container -->
    <padding>
        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
    </padding>
</VBox>